{% extends 'base.html.twig' %}

{% block main %}

    <section>
        <div class="container">

            <h1 class="is-size-2 has-text-weight-bold has-text-centered mt-4">
                <i class="fas fa-globe"></i>
            </h1>

            <h1 class="is-size-3 has-text-weight-bold has-text-centered mb-4">Dashboard</h1>

            <a class="button is-info is-medium my-6" href="{{ path('job_form') }}">
                <i class="fas fa-plus-square mr-2"></i>
                Ajouter
            </a>


            <div class="job has-text-weight-semibold has-text-grey-light">

                <div>ID</div>
                <div>SOCIÉTÉ</div>
                <div>INTITULÉ</div>
                <div></div>
                <div>STATUT</div>
                <div>POSTULÉ LE</div>

            </div>




            {% for job in jobs %}

                <div class="job">

                    <div class="is-family-monospace has-text-grey-light">
                        <small>{{ job.id }}</small>
                    </div>

                    <div>
                        <h5 class="has-text-weight-bold">
                            {{ job.company.name|upper }}
                        </h5>
                    </div>

                    <div>
                        <h5>
                            <a class="has-text-weight-bold has-text-info is-size-5"
                               href="{{ path('job_edit', {id: job.id}) }}">
                                {{ job.title }}
                            </a>
                        </h5>
                    </div>

                    <div>
                        {% if job.link is not null %}
                            <a href="{{ job.link }}" target="_blank">
                                <i class="fas fa-external-link-alt"></i>
                            </a>
                        {% endif %}
                    </div>

                    <div class="status has-background-{{ job.status|status_color }} p-1 mr-2">
                        <h5 class="has-text-weight-bold has-text-centered">
                            {{ job.status|status|upper }}
                        </h5>
                    </div>

                    <div>
                        <p>{{ job.appliedOn|date("d/m/Y") }}</p>
                    </div>

                </div>

            {% endfor %}



