{% extends 'base.html.twig' %}

{% block main %}

    <section>
        <div class="container is-fluid">

            {# PAGE HEADER #}
            <div class="page-header">
                <h1 class="is-size-2 has-text-weight-bold my-3">Dashboard</h1>
            </div>

            {# TOOLBAR #}
            {% include 'dashboard/_toolbar_dashboard.html.twig' %}

            {# PAGE CONTENT #}
            <div class="job has-text-weight-semibold has-text-grey-light">
                <div>ID</div>
                <div>SOCIÉTÉ</div>
                <div>INTITULÉ</div>
                <div></div>
                <div>STATUT</div>
                <div>POSTULÉ LE</div>
            </div>

            {% for job in jobs %}
                <div class="job">

                    <div class="is-family-monospace has-text-grey-light">
                        <small>{{ job.id }}</small>
                    </div>

                    <div>
                        <h5 class="has-text-weight-bold">
                            {{ job.company.name|upper }}
                        </h5>
                    </div>

                    <div>
                        <h5>
                            <a class="has-text-weight-bold has-text-info"
                               href="{{ path('job_edit', {id: job.id}) }}">
                                {{ job.title }}
                            </a>
                        </h5>
                    </div>

                    <div>
                        {% if job.link is not null %}
                            <a href="{{ job.link }}" target="_blank">
                                <i class="fas fa-external-link-alt"></i>
                            </a>
                        {% endif %}
                    </div>

                    <div class="status has-background-{{ job.status|status_color }} p-1 mr-2">
                        <h5 class="has-text-weight-bold has-text-centered">
                            {{ job.status|status|upper }}
                        </h5>
                    </div>

                    <div>
                        <p>{{ job.appliedOn|date("d/m/Y") }}</p>
                    </div>
                </div>
            {% endfor %}



