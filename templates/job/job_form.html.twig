{% extends 'base.html.twig' %}

{% block main %}

    <section>
        <div class="container">

            <h1 class="is-size-3 has-text-weight-bold has-text-centered my-6">
                {% if 'form' in app.request.get('_route') %}
                    <span>Cr√©ation</span>
                {% elseif 'edit' in app.request.get('_route') %}
                    <span>Modification</span>
                {% endif %}
                d'annonce</h1>


            {# DELETE BUTTON #}
            {% if job is defined and job.id is not null %}
                <div class="has-text-centered">
                    <a class="button is-danger is-large my-4"
                       href="{{ path('job_delete', {id: job.id }) }}">Supprimer</a>
                </div>
            {% endif %}

            {{ form_start(form) }}

            <div class="columns">

                <div class="column">
                    <div class="field">
                        {{ form_label(form.company, '', {'label_attr': {'class': 'label'}}) }}
                        <div class="control">
                            <div class="select">
                                {{ form_widget(form.company, {attr: {class: ''}}) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="column">
                    <div class="field">
                        {{ form_label(form.platform, '', {'label_attr': {'class': 'label'}}) }}
                        <div class="control">
                            <div class="select">
                                {{ form_widget(form.platform, {attr: {class: ''}}) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="column">
                    <div class="field">
                        {{ form_label(form.status, '', {'label_attr': {'class': 'label'}}) }}
                        <div class="control">
                            <div class="select">
                                {{ form_widget(form.status, {attr: {class: ''}}) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>


            <div class="field">
                {{ form_label(form.title, '', {'label_attr': {'class': 'label'}}) }}
                <div class="control">
                    {{ form_widget(form.title, {attr: {class: 'is-size-4 p-2'}}) }}
                </div>
            </div>

            <div class="field">
                {{ form_label(form.link, 'Lien', {'label_attr': {'class': 'label'}}) }}
                <div class="control">
                    {{ form_widget(form.link, {attr: {class: 'is-size-4 p-2'}}) }}
                </div>
            </div>

            <div class="field">
                {{ form_label(form.appliedOn, '', {'label_attr': {'class': 'label'}}) }}
                <div class="control">
                    {{ form_widget(form.appliedOn, {attr: {class: 'is-size-4 p-2'}}) }}
                </div>
            </div>


            <div class="field">
                <div class="control has-text-centered">
                    {{ form_widget(form.submit, {attr: {class: 'button is-primary is-large my-4'}}) }}
                </div>
            </div>

            {{ form_end(form) }}

        </div>
    </section>

{% endblock %}
