{% extends 'base.html.twig' %}

{% block main %}

    <section>
        <div class="container">

            <h1 class="is-size-2 has-text-weight-bold has-text-centered mt-4">
                <i class="fas fa-landmark"></i>
            </h1>

            <h1 class="is-size-3 has-text-weight-bold has-text-centered mb-4">Sociétés</h1>

            <a class="button is-info is-medium my-6" href="/companies/form">
                <i class="fas fa-plus-square mr-2"></i>
                Ajouter
            </a>

            <div class="company has-text-weight-bold has-text-grey-light">
                <div>ID</div>
                <div>NOM</div>
                <div>DOMAINE D'ACTIVITÉ</div>
                <div>SITE WEB</div>
            </div>

            {% for company in companies %}
                <div class="company">
                    <div>{{ company.id }}</div>

                    <div>
                        <h5>
                            <a class="has-text-weight-bold has-text-info is-size-5"
                               href="{{ path('company_edit', {id: company.id}) }}">
                                {{ company.name }} ({{ company.jobs|length}})
                            </a>
                        </h5>
                    </div>

                    <div>{{ company.domain }}</div>

                    <div>
                        <small>
                            <a class="has-text-weight-semibold has-text-primary"
                               href="{{ company.website }}"
                               target="_blank">{{ company.website }}</a>
                        </small>
                    </div>

                </div>
            {% endfor %}

        </div>
    </section>

{% endblock %}
