{% extends 'base.html.twig' %}

{% block main %}

    <section>
        <div class="container is-fluid">

            {# PAGE HEADER #}
            <div class="page-header">
                <h1 class="is-size-2 has-text-weight-bold my-3">Textes</h1>
            </div>

            {# TOOLBAR #}
            <div class="toolbar">
                <a class="button is-info is-medium my-3" href="{{ path('resume_form') }}">
                    <i class="fas fa-plus-square mr-2"></i>
                    Ajouter
                </a>
            </div>


            <div class="resume-wrapper">
                {% for resume in resumes %}

                    <article class="card">

                        <div class="card-content">
                            {#                            <p>#{{ resume.id }}</p> #}

                            <p class="mt-2">
{#                                <i class="fas fa-tag"></i>#}

                                <span class="res-type res-type-{{ resume.type|resume_type|lower }} px-3 py-1">
                                    {{ resume.type|resume_type }}
                                </span>
                            </p>

                            <h5 class="has-text-weight-bold is-size-5 mt-4">{{ resume.title }}</h5>

                            <p class="mt-3 has-text-grey-light">
                                {#                                <i class="fas fa-tachometer-alt"></i>#}
                                {{ resume.length }} caract√®res
                            </p>


                        </div>


                        <footer class="card-footer">

                            <a href="{{ path('resume_preview', {id: resume.id}) }}"
                               class="card-footer-item has-text-weight-bold py-4">
                                <i class="fas fa-print is-size-3"></i>
                            </a>

                            <a href="{{ path('resume_edit', {id: resume.id}) }}"
                               class="card-footer-item has-text-weight-bold py-4">
                                <i class="far fa-edit is-size-3"></i>
                            </a>

                        </footer>


                    </article>


                {% endfor %}
            </div>


        </div>
    </section>

{% endblock %}
